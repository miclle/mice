<Layout title="Tags" bodyClass="components components_tags" activeSection="components" currentPage="/components/tags">
  <h1 class="title">Tags</h1>

  <h2>Default</h2>
  <section class="example">
    <span class="tag">Default</span>
    <span class="tag primary">Primary</span>
    <span class="tag success">Success</span>
    <span class="tag info">Info</span>
    <span class="tag warning">Warning</span>
    <span class="tag danger">Danger</span>
  </section>
<pre><code class="highlight html"><span class="nt">&lt;span</span> <span class="na">class=</span><span class="s">"tag"</span><span class="nt">&gt;</span>Default<span class="nt">&lt;/span&gt;</span>
<span class="nt">&lt;span</span> <span class="na">class=</span><span class="s">"tag primary"</span><span class="nt">&gt;</span>Primary<span class="nt">&lt;/span&gt;</span>
<span class="nt">&lt;span</span> <span class="na">class=</span><span class="s">"tag success"</span><span class="nt">&gt;</span>Success<span class="nt">&lt;/span&gt;</span>
