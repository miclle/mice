---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Labels" bodyClass="components components_labels" activeSection="components" currentPage="/components/labels">
  <h1 class="title">Labels</h1>

  <h2>Default</h2>
  <section class="example">
    <span class="label">Default</span>
    <span class="label primary">Primary</span>
    <span class="label success">Success</span>
    <span class="label info">Info</span>
    <span class="label warning">Warning</span>
    <span class="label danger">Danger</span>
  </section>
<pre><code class="highlight html"><span class="nt">&lt;span</span> <span class="na">class=</span><span class="s">"label"</span><span class="nt">&gt;</span>Default<span class="nt">&lt;/span&gt;</span>
<span class="nt">&lt;span</span> <span class="na">class=</span><span class="s">"label primary"</span><span class="nt">&gt;</span>Primary<span class="nt">&lt;/span&gt;</span>
<span class="nt">&lt;span</span> <span class="na">class=</span><span class="s">"label success"</span><span class="nt">&gt;</span>Success<span class="nt">&lt;/span&gt;</span>
<span class="nt">&lt;span</span> <span class="na">class=</span><span class="s">"label info"</span><span class="nt">&gt;</span>Info<span class="nt">&lt;/span&gt;</span>
<span class="nt">&lt;span</span> <span class="na">class=</span><span class="s">"label warning"</span><span class="nt">&gt;</span>Warning<span class="nt">&lt;/span&gt;</span>
<span class="nt">&lt;span</span> <span class="na">class=</span><span class="s">"label danger"</span><span class="nt">&gt;</span>Danger<span class="nt">&lt;/span&gt;</span>
</code></pre>


