      <tbody>
        <tr>
          <td>
            <h1>h1. Heading <span class="label">New</span></h1>
          </td>
        </tr>
        <tr>
          <td>
            <h2>h2. Heading <span class="label">New</span></h2>
          </td>
        </tr>
        <tr>
          <td>
            <h3>h3. Heading <span class="label">New</span></h3>
          </td>
        </tr>
        <tr>
          <td>
            <h4>h4. Heading <span class="label">New</span></h4>
          </td>
        </tr>
        <tr>
          <td>
            <h5>h5. Heading <span class="label">New</span></h5>
          </td>
        </tr>
        <tr>
          <td>
            <h6>h6. Heading <span class="label">New</span></h6>
          </td>
        </tr>
      </tbody>
    </table>
  </section>
<pre><code class="highlight html"><span class="nt">&lt;h1&gt;</span>h1. Heading <span class="nt">&lt;span</span> <span class="na">class=</span><span class="s">"label"</span><span class="nt">&gt;</span>New<span class="nt">&lt;/span&gt;&lt;/h1&gt;</span>
<span class="nt">&lt;h2&gt;</span>h2. Heading <span class="nt">&lt;span</span> <span class="na">class=</span><span class="s">"label"</span><span class="nt">&gt;</span>New<span class="nt">&lt;/span&gt;&lt;/h2&gt;</span>
<span class="nt">&lt;h3&gt;</span>h3. Heading <span class="nt">&lt;span</span> <span class="na">class=</span><span class="s">"label"</span><span class="nt">&gt;</span>New<span class="nt">&lt;/span&gt;&lt;/h3&gt;</span>
<span class="nt">&lt;h4&gt;</span>h4. Heading <span class="nt">&lt;span</span> <span class="na">class=</span><span class="s">"label"</span><span class="nt">&gt;</span>New<span class="nt">&lt;/span&gt;&lt;/h4&gt;</span>
<span class="nt">&lt;h5&gt;</span>h5. Heading <span class="nt">&lt;span</span> <span class="na">class=</span><span class="s">"label"</span><span class="nt">&gt;</span>New<span class="nt">&lt;/span&gt;&lt;/h5&gt;</span>
