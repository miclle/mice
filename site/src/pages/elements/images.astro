<Layout title="Images" bodyClass="elements elements_images" activeSection="elements" currentPage="/elements/images">
  <h1 class="title">Images</h1>

  <h2>Responsive images</h2>
  <section class="example">
    <img class="responsive" src="/images/defoliation.jpeg" alt="Defoliation" />
    <div>
      Photographer: <a target="_blank" href="http://miclle.com/photo/41"><small>@chummy</small></a>
    </div>
  </section>
