---
interface Props {
  currentPage?: string;
}

const { currentPage = '' } = Astro.props;

// Define navigation structure
const navItems = [
  {
    heading: 'Elements',
    href: '/docs/elements/typography',
    items: [
      { name: 'Typography', href: '/docs/elements/typography' },
      { name: 'Code', href: '/docs/elements/code' },
      { name: 'Buttons', href: '/docs/elements/buttons' },
      { name: 'Input', href: '/docs/elements/input' },
      { name: 'Images', href: '/docs/elements/images' },
    ],
  },
  {
    heading: 'Grid',
    href: '/docs/grid',
    items: [],
  },
  {
    heading: 'Components',
    href: '/docs/components/alerts',
    items: [
      // Feedback & Notifications
      { name: 'Alerts', href: '/docs/components/alerts' },
      { name: 'Message', href: '/docs/components/message' },
      { name: 'Tooltips', href: '/docs/components/tooltips' },
      { name: 'Progress', href: '/docs/components/progress' },

      // Navigation
      { name: 'Navbar', href: '/docs/components/navbar' },
      { name: 'Breadcrumbs', href: '/docs/components/breadcrumbs' },
      { name: 'Pagination', href: '/docs/components/pagination' },
      { name: 'Tabs', href: '/docs/components/tabs' },

      // Content Display
      { name: 'Cards', href: '/docs/components/cards' },
      { name: 'Lists', href: '/docs/components/lists' },
      { name: 'Tables', href: '/docs/components/tables' },
      { name: 'Media', href: '/docs/components/media' },
      { name: 'Tags', href: '/docs/components/tags' },
      { name: 'Callouts', href: '/docs/components/callouts' },

      // Interactive
      { name: 'Dialog', href: '/docs/components/dialog' },
      { name: 'Forms', href: '/docs/components/forms' },
    ],
  },
  {
    heading: 'Helper classes',
    href: '/docs/helper',
    items: [],
  },
];

const isActive = (href: string) => {
  return currentPage === href;
};
---

<nav class="bd-links-nav">
  {
    navItems.map((section) => (
      <>
        <strong>{section.heading}</strong>
        <ul>
          {section.items.length > 0 ? (
            section.items.map((item) => (
              <li>
                <a href={item.href} class={isActive(item.href) ? 'active' : ''}>
                  {item.name}
                </a>
              </li>
            ))
          ) : (
            <li>
              <a href={section.href} class={isActive(section.href) ? 'active' : ''}>
                Overview
              </a>
            </li>
          )}
        </ul>
      </>
    ))
  }
</nav>
