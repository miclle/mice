---
interface Props {
  currentPage?: string;
}

const { currentPage = '' } = Astro.props;

// Define navigation structure
const navItems = [
  {
    heading: 'Elements',
    href: '/elements',
    items: [
      { name: 'Typography', href: '/elements/typography' },
      { name: 'Code', href: '/elements/code' },
      { name: 'Buttons', href: '/elements/buttons' },
      { name: 'Input', href: '/elements/input' },
      { name: 'Images', href: '/elements/images' },
    ],
  },
  {
    heading: 'Helper classes',
    href: '/helper',
    items: [],
  },
  {
    heading: 'Grid',
    href: '/grids',
    items: [],
  },
  {
    heading: 'Components',
    href: '/components',
    items: [
      { name: 'Labels', href: '/components/labels' },
      { name: 'Lists', href: '/components/lists' },
      { name: 'Tables', href: '/components/tables' },
      { name: 'Forms', href: '/components/forms' },
      { name: 'Navbar', href: '/components/navbar' },
      { name: 'Tabs', href: '/components/tabs' },
      { name: 'Breadcrumbs', href: '/components/breadcrumbs' },
      { name: 'Pagination', href: '/components/pagination' },
      { name: 'Cards', href: '/components/cards' },
      { name: 'Progress', href: '/components/progress' },
      { name: 'Alerts', href: '/components/alerts' },
      { name: 'Callouts', href: '/components/callouts' },
      { name: 'Modals', href: '/components/modals' },
      { name: 'Tooltips', href: '/components/tooltips' },
      { name: 'Message', href: '/components/message' },
    ],
  },
];

const isActive = (href: string) => {
  return currentPage === href ? 'active' : '';
};
---

<nav class="sidebar">
  <ul class="menu">
    {navItems.map((section) => (
      <>
        <li class="heading">
          <a href={section.href}>{section.heading}</a>
        </li>

        {section.items.map((item) => (
          <li class={isActive(item.href)}>
            <a href={item.href}>{item.name}</a>
          </li>
        ))}
      </>
    ))}
  </ul>
</nav>
